# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_API_VERSION=v1

# App Configuration
NEXT_PUBLIC_APP_NAME="My Survey"
NEXT_PUBLIC_APP_DESCRIPTION="Comprehensive survey management platform"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true

# Third-party Services
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_HOTJAR_ID=

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/*,application/pdf,.doc,.docx

# Maps and Location
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE=@mysurvey
NEXT_PUBLIC_GITHUB_URL=https://github.com/kabomekgwe/my-survey

# Development
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_SHOW_DEV_TOOLS=true

# Monitoring
NEXT_PUBLIC_LOG_LEVEL=debug
