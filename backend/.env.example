# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/my_survey?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-super-secret-refresh-jwt-key"
JWT_REFRESH_EXPIRES_IN="30d"

# App Configuration
NODE_ENV="development"
PORT=3001
API_PREFIX="api"
API_VERSION="v1"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST="./uploads"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@mysurvey.com"

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# Swagger
SWAGGER_TITLE="My Survey API"
SWAGGER_DESCRIPTION="Comprehensive survey management API"
SWAGGER_VERSION="1.0"
SWAGGER_PATH="api/docs"

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret"

# Monitoring
LOG_LEVEL="debug"
ENABLE_SWAGGER=true

# Bull Queue
BULL_REDIS_HOST="localhost"
BULL_REDIS_PORT=6379
BULL_REDIS_PASSWORD=""

# Cache
CACHE_TTL=300
CACHE_MAX=100
